<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="cobalt" method="upgrade">
	<name>Cobalt Lead Notify</name>
	<author>Cobalt</author>
	<creationDate>Sept 2012</creationDate>
	<copyright>Copyright 2012 Cobalt. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>info@cobaltcrm.org</authorEmail>
	<authorUrl>www.cobaltcrm.org</authorUrl>
	<version>1.0.0</version>
	<description></description>
	<files>
		<filename plugin="leadnotify">leadnotify.php</filename>
		<filename>index.html</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="subject"
					type="text"
					label="Email Subject"
					description="Enter the subject of the email message" />

				<field
					name="pretext"
					type="textarea"
					filter="safehtml"
					cols="30"
					rows="5"
					label="Email Body Prefix"
					description="Enter any information you want displayed in the body of the email above the form fields submitted." />
			</fieldset>
		</fields>
	</config>

</extension>
